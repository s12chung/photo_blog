<h2><%= set_title "Login" %></h2>
<section class="main">
  <%= form_tag login_path do %>
      <p>
        <%= label_tag :username %><br />
        <%= text_field_tag :username, params[:username] %>
      </p>
      <p>
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </p>
      <%= submit_tag "Log in" %>
  <% end %>
</section>