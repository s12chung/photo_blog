<title><%= title %></title>
<%= render "layouts/head/typekit" %>

<%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/normalize/2.1.3/normalize.min.css" %>
<%= stylesheet_link_tag "application", media: "all" %>

<%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" %>

<% if user_agent.mobile? %>
    <%= render "layouts/head/mobile" %>
<% else %>
    <%= stylesheet_link_tag "desktop", media: "all" %>
    <%= render "layouts/head/admin" %>
<% end %>

<script>is_mobile = <%= user_agent.mobile? %>;</script>
<%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery-scrollTo/1.4.7/jquery.scrollTo.min.js" %>
<%= javascript_include_tag "application" %>

<%= csrf_meta_tags %>