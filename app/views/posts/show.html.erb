<% content_for :header do %>
    <%= render "layouts/invisible_header" %>
<% end %>

<div class="photo_box" data-behavior="photo_box">
  <%= direction_arrow :left %>
  <%= direction_arrow :right %>
  <div class="inner">
    <%= image_tag @post.photo_url, class: "photo" %>
  </div>
</div>

<section class="main">
  <h2><%= set_title @post.title %></h2>
</section>