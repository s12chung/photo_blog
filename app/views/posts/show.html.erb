<h1><%= link_to title_short, root_path %></h1>

<% if user_agent.mobile? %>
    <%= render "photoswipe" %>
<% else %>
    <%= render "photo_box" %>
    <div class="container_outer">
      <section class="main">
        <% if @post.has_content? %>
            <%= render "content" %>
        <% end %>
        <%= render "layouts/disqus" %>
      </section>
    </div>
<% end %>