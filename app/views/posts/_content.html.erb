<% cache ([@post, user_agent.mobile?] + @post.adjacent) do %>
    <div class="content">
      <div class="markdown">
        <%= @post.markdown_html %>
      </div>

      <% unless @post.footnotes.empty? %>
          <div class="footnotes">
            <ol>
              <%= @post.footnotes %>
            </ol>
          </div>
      <% end %>
    </div>
    <% unless user_agent.mobile? %>
        <div class="next_prev">
          <%= render "direction_footer", change: -1 %>
          <%= render "direction_footer", change: 1 %>
        </div>
    <% end %>
    <%= render "layouts/comments" %>
<% end %>