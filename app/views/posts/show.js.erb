var $li = $(data_behavior('swipe')).find('li').eq(<%= @post.publish_order %>);
if (!defined($li.data('loaded'))) {
    $li.html('<%= j render("photoswipe_content")%>');
    $li.data('loaded', true);
}
$(data_behavior('popup_content')).html('<%= j render("content") %>');

Behavior.pinch_zoom($li.find(data_behavior('pinch_zoom')));
Behavior.resize_swipe();
$(data_behavior('summary_content_container')).fade_show();