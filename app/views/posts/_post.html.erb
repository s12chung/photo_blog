<%= link_to post_path(post), data: { read_url: post_path(post), edit_url: edit_post_path(post) } do %>
    <article class="post">
      <%= image_tag post.photo.index.gray.desktop %>
      <%= image_tag post.photo.index.desktop, class: "color" %>

      <header>
        <div>
          <div class="date"><%= post.localized_date %></div>
          <h3><%= post.title %></h3>
        </div>
      </header>
    </article>
<% end %>