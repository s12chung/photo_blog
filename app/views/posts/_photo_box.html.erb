<div class="photo_box" data-behavior="photo_box">
  <div class="summary">
    <%= direction_arrow :left %>
    <%= direction_arrow :right %>

    <div class="container_outer">
      <div class="container">
        <%= render "summary_content", post: @post %>
      </div>
    </div>
  </div>

  <div class="inner">
    <%= image_tag @post.photo.crop_preview, class: "photo" %>
  </div>
</div>